<div class="modal fade" id="exampleModalDraw" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Your new draw</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @draw do |f| %>
          <%= f.input :title %>
          <%= f.input :budget %>
          <%= f.input :date, html5: {column: true} %>
          <span><small>* mandatory fields</small></span>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
